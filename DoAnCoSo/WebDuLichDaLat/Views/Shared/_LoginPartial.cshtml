@using Microsoft.AspNetCore.Identity
@using WebDuLichDaLat.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    string? capitalizedLastName = null;

    if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        var fullName = user?.FullName;
        var lastName = fullName?.Split(' ').LastOrDefault();
        capitalizedLastName = lastName != null ? char.ToUpper(lastName[0]) + lastName.Substring(1).ToLower() : "";
    }
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle"></i> @capitalizedLastName
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Tài khoản</a>
                </li>
                <li>
                    <form id="logoutForm" method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
                        <button type="submit" class="dropdown-item">Đăng xuất</button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
        </li>
        
    }
</ul>
