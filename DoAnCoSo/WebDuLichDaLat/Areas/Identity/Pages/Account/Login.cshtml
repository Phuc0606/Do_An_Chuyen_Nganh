@page
@model LoginModel

@{
   
}

@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["StatusMessage"]
    </div>
}



<h1>@ViewData["Title"]</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <h1 class="text-center text-white">Login</h1>
            <h2 class="text-center text-white">Use a local account to log in.</h2>
            
            <form id="account" method="post">
                
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label text-white">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>


                <div style="margin-top: 20px;">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Chưa có tài khoản?</a>
                    </p>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu?</a>
                    </p>                  
                    
                </div>


            </form>
           
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script>
            setTimeout(function () {
                const alert = document.querySelector(".alert");
                if (alert) alert.style.display = "none";
            }, 4000); // Ẩn sau 4 giây
        </script>
}

